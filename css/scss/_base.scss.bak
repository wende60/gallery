    /* ----------------------------------------
        basic stuff
    ---------------------------------------- */
    * {
        margin: 0;
        padding: 0;
    }

    html, body {
        width: 100%;
        height: 100%;
        overflow: hidden;
        position: relative;  
        background: $darkgray;
        color: $font-dark;
        font: normal normal normal 14px verdana,helvetica,arial,sans-serif;
        -webkit-text-size-adjust: 100%;
    }
    
    h1 {
        font-size: 28px;
        padding: 15px 0 15px 0;
        font-weight: normal;
        letter-spacing: 1px;
        color: #696969;
    }
    
    h2 {
        font-size: 18px;
        padding: 20px 0 15px 0;
        font-weight: normal;        
    }
    
    h3 {
        font-size: 15px;
        padding: 15px 0 15px 0;     
        font-weight: normal;        
    }
    
    h4, h4, h6 {
        font-size: 13px;
        padding: 15px 0 15px 0;        
    }    
    
    p {
        margin: 0;
        padding: 0 0 15px 0;
        line-height: 150%;
    }
    
    a {
        color: $font-red;
        text-decoration: none;
    }
    
    
    /* ----------------------------------------
        main wrapper
    ---------------------------------------- */
    #gallery-wrapper {
        width: 100%;
        height: 100%;
        position: relative;
        top: 0;
        left: 0;
        
        @include vendor(transition, left 0.3s);    

        .gallery-division {
            background: $mediumgray;
        }           
        
        .gallery-division.gallery-division-gray {
            background: $lightgray;
        } 
        
        .gallery-division.gallery-division-form {
            background: $lightgray;
        }          
        
        .gallery-inner {
            padding: 2% 3% 2% 3%;
            margin: auto;
            max-width: $max;
            width: 94%;
            text-align: left; 
        }
        
        .gallery-inner img {
            max-width: 100%;
            height: auto;
        }
        
        .gallery-division:last-child {
            padding-bottom: 1%;
        }
    }
    
    /* must fit with navi item's size */
    #gallery-wrapper.dpl-navi {
        left: 300px;
        
        @media #{$bp-small} {
            left: 50%;
        }         
    } 
    

    /* ----------------------------------------
        navi items
    ---------------------------------------- */
    #navi-wrapper {
        width: 300px;
        height: 100%;
        position: absolute;
        left: -300px;
        top: 0;
        overflow: auto;
        background: $colorlight;
        color: $font-dark;  
        
        ul, li {
            margin: 0;
            padding: 0;
            list-style: none;
        }
        
        a {
            color: $font-dark;
            text-decoration: none;
        } 
        
        @media #{$bp-small} {   
            width: 50%;
            left: -50%;
        }
        
        .navi-list-wrapper {
            padding: 6%;
        }
        
        .navi-list-wrapper > ul > li {
            padding: 6px 0 6px 0;
            border-bottom: 1px dashed $darkgray;
        }
        
        .navi-list-wrapper > ul > li.navi-gallery {
            padding-left: 25px;
            background: transparent url(../gfx/gallery.png) no-repeat left 50%;
            border-bottom: 1px dashed $darkgray;
        }        
        
        .navi-list-wrapper > ul > li.navi-top-sel a {
            color: $font-red;
        }        
    }
    
    /* ----------------------------------------
        _escaped_fragments_
    ---------------------------------------- */
    #fragment-wrapper {
        width: 100%; 
        height: 100%;
        overflow: auto;
        
        ul {
            padding: 0;
            margin: 0;
            list-style: none;
            overflow: auto;
            white-space: nowrap;
            @include clearafter();
        }
        
        li {
            margin: 0;
            padding: 3px;
            list-style: none;
            display: inline-block;
            width: 150px;
            text-align: center;
            white-space: normal;
            vertical-align: top;
        }
        
        li p {
            font-size: 12px;
        }
    }
    
    /* ----------------------------------------
        thumbnails
    ---------------------------------------- */ 
    #thumblist-wrapper {
        width: 100%; 
        height: 100%;
        overflow: auto;
        
        .gallery-thumblist-wrapper {
            margin: 10px 0 10px 0;           
        }
        
        ul.gallery-thumblist {
            width: 100%;
            margin: 0;
            padding: 0;
            list-style: none;
        } 
        
        ul.gallery-thumblist:after {    
            content: '.';
            height: 0;
            visibility: hidden;
            display: block;
            clear: both;
        }
        
        .gallery-thumblist li {
            width: 15%;
            padding: 0 0 15% 0;
            margin: 0;
            position: relative;
            float: left;
            display: block;
            list-style: none;
            text-align: center;
            
            @media #{$bp-med} {  
                width: 20%;
                padding: 0 0 20% 0;
            }
            
            @media #{$bp-small} {  
                width: 33.3%;
                padding: 0 0 33.3% 0;
            }            
        } 
        
        .gallery-thumblist li div {
            width: 98%;
            height: 98%;
            padding: 1%;
            position: absolute;
            top: 0;
            left: 0;
            overflow: hidden;
        } 
        
        .gallery-thumblist li div a {
            width: 90%;
            height: 90%;
            display: block;
            background: $colorlight;
            padding: 5%;
        } 
        
        .gallery-thumblist li div a span {
            display: inline-block;
            width: 0;
            height: 100%;
            vertical-align: middle;
            margin: 0 0 0 0;
            overflow: hidden;
        } 
        
        .gallery-thumblist li div a img {
            width: auto;
            height: auto;
            max-width: 100%;
            max-height: 100%;  
            border: none;
            vertical-align: middle;        
        }       
    }

    /* ----------------------------------------
        image view
    ---------------------------------------- */ 
    #viewimage-wrapper {
        width: 100%; 
        height: 100%;
        background: black;
        text-align: center;
        white-space: nowrap;
        overflow: hidden;
        position: relative;
        
        ul {  
            width: 300%;
            height: 100%;
            overflow: hidden;
            position: relative;
            left: -100%;
            list-style: none;
        } 
        
        ul li {  
            width: 33.333333%;
            height: 100%;
            float: left;
            overflow: hidden;
            list-style: none;            
        }  
        
        ul img {
            width: auto;
            height: auto;
            margin: auto;
            max-height: 100%;
            max-width: 100%;
            vertical-align: middle;  
            cursor: move;
        }
        
        ul span {
            display: inline-block;
            width: 0;
            height: 100%;
            vertical-align: middle;
            margin: 0 -4px 0 0;
        }        
    }

    /* ----------------------------------------
        contents
    ---------------------------------------- */ 
    #content-wrapper {
        height: 100%;
        width: 100%;
        position: relative;
        overflow: auto;
        
        .image-description {
            display: none;
            min-height: 1px;
            @include clearafter();
        }
        
        .image-description img {
            float: left;
            margin: 0 10px 10px 0;
        } 
    }
    
    
    
    /* ----------------------------------------
        default layout
    ---------------------------------------- */
    #static-wrapper {
        width: 100%; 
        height: 100%;
        overflow: auto;
    }    
    
    

    /* ----------------------------------------
        toolbar
    ---------------------------------------- */ 
    .gallery-toolbar {
        background: $colorlight;
        text-align: center;
        padding: 8px 0 4px 0;
        
        p {
            background: #8c0000 url(../gfx/icons.png) no-repeat 0 0;
            width: 30px;
            height: 30px;
            display: inline-block;
            margin: 0 10px 0 10px;
            padding: 0;
            cursor: pointer; 
            @include vendor(border-radius, 5px);        
        }
        
        span {
            display: none;
        }  
        
        p.gallery-next {
            background-position: 0 0;
        }  
        
        p.gallery-prev {
            background-position: -30px 0;
        }  

        p.gallery-imgsrc {
            background-position: -150px 0;
        } 
    
        p.gallery-close {
            background-position: -120px 0;
        }  
    
        p.gallery-info {
            background-position: -180px 0;
        }     
    
        p.gallery-thumb {
            background-position: -60px 0;
        }
    
        p.gallery-navi {
            background-position: -210px 0;
        } 
    }
    
    #static-wrapper,
    #fragment-wrapper,    
    #thumblist-wrapper {
        .gallery-toolbar {
            background: #ffffff url(../gfx/bg-navi.png) repeat 50% 50%;
        }
    }
    
    #viewimage-wrapper {
        .gallery-toolbar {
            position: absolute;
            left: 0;
            top: 0;
            z-index: 20000;
            width: 100%;    
            display: none;
            
            opacity: 0.5;
            filter: alpha(opacity=50); 
        }
    }

    #static-wrapper,
    #fragment-wrapper,
    #thumblist-wrapper {
        .gallery-toolbar {
            text-align: left;
        }
    }
    
    
    /* ----------------------------------------
        modules
    ---------------------------------------- */ 
    .content-text-image {
        @include clearafter();
        margin: 10px 0 10px 0;
        
        .image-wrapper {
            float: left;
            width: 30%;
            text-align: center;
            @media #{$bp-small} {
                float: none;
                width: 100%;
                padding: 0 0 10px 0;
                margin: 0 0 10px 0;
            } 
        }
        
        .image-wrapper-light {
            padding: 3% 0 3% 0;
            background: $colorlight;
            @media #{$bp-small} {
                margin: 0 0 20px 0;
            }  
        }
        
        .image-wrapper img {
            max-width: 100%;
            height: auto;
        }
        
        .image-wrapper p {        
            font-size: 12px;
            font-style: italic;
        }
        
        .text-wrapper {
            float: right;
            width: 66%;
            @media #{$bp-small} {
                float: none;
                width: 100%;
                padding: 0 0 10px 0;
            }             
        } 
             
        .text-wrapper :first-child {
            padding-top: 0;
            margin-top: 0;
        } 
        
        ul {
            padding: 0  0 15px 20px;
        }
        
        ul ul {
            padding: 5px 0 5px 20px !important;
        }
        
        li {
            padding: 0 0 5px 0;
        }
    }
    
    .content-text {
        margin: 10px 0 10px 0;
        :first-child {
            padding-top: 0;
            margin-top: 0;
        }
        
        ul {
            padding: 0  0 15px 20px;
        }
        
        ul ul {
            padding: 5px 0 5px 20px !important;
        }
        
        li {
            padding: 0 0 5px 0;
        }        
    }
     
    
    /* -------------------------------------------------    
        mail
    ------------------------------------------------- */  
    .gallery-contactform {
    
        margin: 10px 0 10px 0;

        .customer {
            display: none;
        }
        
        p {
            clear: both;
            overflow: hidden;
            padding: 0 0 10px 0;
        }    
        
        p label {
            float: left;
            width: 30%;
            padding: 3px;
            text-align: right;
            @media #{$bp-small} {
                float: none;
                width: auto;
                display: block;
                text-align: left;
            }            
        }
        
        p input {
            float: right;
            width: 50%;
            margin: 0 16% 0 0;
            border: 1px solid $darkgray;
            padding: 3px;
            font-size: 14px;
            @include vendor(box-sizing, border-box);
            @media #{$bp-med} {
                margin: 0;
                width: 66%;
            }            
            @media #{$bp-small} {
                float: none;
                width: 100%;
            }               
        } 
        
        p textarea {
            float: right;
            width: 50%;
            margin: 0 16% 0 0;
            height: 120px;
            border: 1px solid $darkgray;
            padding: 3px;
            font-size: 14px;
            @include vendor(box-sizing, border-box);
            @media #{$bp-med} {
                margin: 0;
                width: 66%;
            }              
            @media #{$bp-small} {
                float: none;
                width: 100%;
            }             
        } 
        
        p input.sender {
            padding: 5px 15px 5px 15px;
            margin: 20px 16% 20px 0;
            width: auto;
            height: auto;
            border: 1px solid $colorlight;      
            background: $font-red;
            color: $font-invert;
            font-weight: bold;   
            @media #{$bp-med} {
                margin: 20px 0 20px 0;
            }              
        }          
        
        p input.sender:hover {
            background: $font-dark;
        }  
        
        .message,
        .error {
            background: $msg-yellow;
            padding: 10px;
            color: $font-dark;
            margin: 0 0 20px 0;    
        } 
    }    
    
    
    
    
    